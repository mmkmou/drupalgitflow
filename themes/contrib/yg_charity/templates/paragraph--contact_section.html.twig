<section id="contact">
  <div class="container">
    <div class="col-md-12">
      <div class="row">
        <div class="section-title text-center">
          <h2>Contact Us</h2>
          <div class="title-img"><img src="{{ url('<front>') }}/themes/yg_charity/images/line.gif" class="img-responsive" alt="title"></div>
        </div>
        <div class="col-md-6">
        	<div class="section-title">
         	 <h2>Send Your Inquiry</h2>
        	</div>
     	  	{{content.field_contact_form}}
        </div>
		<div class="col-md-6">
		<div class="section-title">
         	 <h2>Address</h2>
        	</div>
		  <div id="address">
		  		<ul class="address">
				<li><i class="fa fa-map-marker"></i> {{content.field_description.0}} </li>
				<li><i class="fa fa-phone"></i>{{content.field_title.0}}</li>
				<li><i class="fa fa-envelope-o"></i>{{content.field_mail.0}}</li>
				</ul>
        	</div>
        	<div class="footer-social">
            <div class="section-title">
         	 <h2>Social Links</h2>
        	</div>
            <ul class="footer-social-links">
            {% if content.field_facebook.0 is empty %}
            {% else %}
              <li><a href="{{content.field_facebook.0}}"><i class="fa fa-facebook"></i></a></li>
            {% endif %}
            {% if content.field_twitter.0 is empty %}
            {% else %}
              <li><a href="{{content.field_twitter.0}}"><i class="fa fa-twitter"></i></a></li>
            {% endif %}
            {% if content.field_instagram.0 is empty %}
            {% else %}
              <li><a href="{{content.field_instagram.0}}"><i class="fa fa-instagram"></i></a></li>
            {% endif %}
            {% if content.field_linked_in.0 is empty %}
            {% else %}
              <li><a href="{{content.field_linked_in.0}}"><i class="fa fa-linkedin"></i></a></li>
            {% endif %}
            </ul>
        </div>
		</div>

      </div>
    </div>
  </div>
</section>
<section id="map-sec">
    <div id="map">
				<iframe src="{{content.field_map_iframe.0}}" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
</section>
